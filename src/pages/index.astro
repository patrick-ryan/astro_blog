---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

import backgroundImage from '../assets/triangle.png';

const backgroundHeight = backgroundImage.height + 'px';
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <style define:vars={{ backgroundHeight }}>
            html {
                height: 100%;
				min-height: 100%;
            }
            body {
                height: 100%;
            }
            #background {
                position: fixed;
                z-index: 1;

                display: flex;
                align-items: center;
                justify-content: center;

                height: 90%;
                width: 100%;
                overflow: hidden;

                padding-bottom: 1.25rem;

                > img {
                    display: flex;

                    height: fit-content;
                    width: fit-content;

                    max-height: 425px;
                    max-width: 425px;

                    opacity: 10%;
                    filter: drop-shadow(2px 2px 2px rgba(0, 0, 225, 0.4));
                }
                > img.dark {
                    opacity: 25%;
                }
            }
            #content {
                height: 100%;
                width: 100%;

                display: flex;
                flex-direction: column;
                align-items: center;
                align-content: space-between;

                main {
                    min-height: var(--backgroundHeight);

                    margin: 0;
                    padding-top: 10%;
                    flex-grow: 1;
                }
            }
        </style>
    </head>
    <body>
        <Header />
        <div id="background">
            <img src={backgroundImage.src} class="dark" alt="background">
        </div>
        <div id="content">
            <main>
                Welcome to my website!
            </main>
            <Footer />
        </div>
    </body>
</html>
